<?xml version="1.0" encoding="UTF-8"?>
<mapping>

    <!--
    watch -b *Test printAddress '"params[0]="+params[0]'
    -->
    <command name="watch" summary="Display the details of specified class and method"
             http-path="/watch">

        <param type="index"
               required="true"
               name="class-pattern"
               summary-ref="template-class-pattern"
               http-name="cnp"/>

        <param type="index"
               required="true"
               name="method-pattern"
               summary-ref="template-method-pattern"
               http-name="mnp"/>

        <param type="index"
               required="true"
               name="watch-express"
               summary-ref="template-summary-expression"
               desc-ref="template-expression"
               http-name="exp"/>

        <param type="index"
               required="false"
               name="condition-express"
               summary-ref="template-summary-condition-expression"
               desc-ref="template-condition-expression"
               http-name="cexp"/>

        <param type="named"
               required="false"
               has-value="true"
               name="x"
               summary-ref="template-expand"
               http-name="expand"/>

        <param type="named"
               has-value="true"
               required="false"
               name="n"
               summary-ref="template-threshold"
               http-name="limit"/>

        <param type="named"
               has-value="false"
               required="false"
               name="b"
               summary="Watch before invocation"
               http-name="pos"
               http-value="before"/>

        <param type="named"
               has-value="false"
               required="false"
               name="s"
               summary="Watch after successful invocation"
               http-name="pos"
               http-value="success"/>

        <param type="named"
               has-value="false"
               required="false"
               name="f"
               summary="Watch after invocation"
               http-name="pos"
               http-value="finish"/>

        <param type="named"
               has-value="false"
               required="false"
               name="e"
               summary="Watch after error exception"
               http-name="pos"
               http-value="error"/>


        <example><![CDATA[
watch -Eb org\.apache\.commons\.lang\.StringUtils isBlank params[0]
watch -b org.apache.commons.lang.StringUtils isBlank params[0]
watch -f org.apache.commons.lang.StringUtils isBlank returnObj
watch -bf *StringUtils isBlank params[0]
watch *StringUtils isBlank params[0]
watch *StringUtils isBlank params[0] params[0].length==1
]]>
        </example>

    </command>

</mapping>